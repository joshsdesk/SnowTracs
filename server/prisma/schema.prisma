generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  name        String
  password    String
  sessions    Session[]
  createdAt   DateTime @default(now())
}

model Session {
  id          Int      @id @default(autoincrement())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  startTime   DateTime @default(now())
  endTime     DateTime
  distanceKm  Float
  topSpeed    Float
  elevationGain Float
  trailMap    String   // Optional: store trail GPX/JSON data
}
